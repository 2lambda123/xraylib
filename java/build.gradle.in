apply plugin: 'java'
//apply plugin: 'osgi'

buildscript {
    repositories {
        mavenCentral()
    }

    dependencies {
        classpath 'org.dm.gradle:gradle-bundle-plugin:0.8'
    }
}

apply plugin: 'org.dm.bundle'


version = '@VERSION@'
libsDirName = '..'


repositories {
    mavenCentral()
}

dependencies {
	compile 'org.apache.commons:commons-math3:3.6'
}

sourceSets {
	main {
		java {
			srcDir '@srcdir@'
		}
		resources {
			srcDir '@builddir@'
			include 'xraylib.dat'
		}
	}
}

jar {
	manifest {
		attributes 'Bundle-Vendor': 'Tom Schoonjans'
	}
}

bundle {
	//instruction 'Include-Resource', 'commons-math3-3.6.jar'
	//instruction 'Bundle-ClassPath', '., commons-math3-3.6.jar'
	instruction 'Export-Package','org.apache.commons.math3', 'org.apache.commons.math3.complex'
}
